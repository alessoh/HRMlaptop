# HRM Training Configuration for Windows CPU

# Training parameters
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=10
HIDDEN_DIM=64
NUM_LAYERS=2

# CPU optimization
NUM_THREADS=4
USE_MKL=true

# Paths (Windows format)
DATA_DIR=data
CHECKPOINT_DIR=checkpoints
LOG_FILE=training.log

# Memory management
MAX_MEMORY_GB=4

# Monitoring
MONITOR_INTERVAL=10
SAVE_EVERY=5

# Debug
DEBUG_MODE=false
VERBOSE=true